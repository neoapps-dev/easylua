test:lignux {
#!/bin/bash
# Do not run this command unless you have done buildit pack.

cp test/test.lua dist/
cd test
lua test.lua
cd ..
rm dist/test.lua
}

test:windows {
@echo off
cd dist
copy /Y ..\test\test.lua .
lua test.lua
cd ..
del /Q dist\test.lua
}

test:macos {
#!/bin/zsh
# Do not run this command unless you have done buildit pack.

cp test/test.lua dist/
cd test
